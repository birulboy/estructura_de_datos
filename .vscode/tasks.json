{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar y Ejecutar C++",
            "type": "shell",
            "command": "clang++",
            "args": [
                "${file}",
                "-o",
                "ejecutable",
                "&&",
                "./ejecutable"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}